{
    "version": "0.1.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Current File",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "--require",
            "@babel/register",
            "--timeout",
            "999999",
            "--colors",
            "${file}"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }
    ]
}
